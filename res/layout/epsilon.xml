<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <SeekBar
        android:id="@+id/epsilon_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/epsilon_margin" />

    <TextView
        android:id="@+id/epsilon_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/epsilon_margin"
        android:layout_marginLeft="@dimen/epsilon_margin"
        android:layout_marginRight="@dimen/epsilon_margin" />

</LinearLayout>