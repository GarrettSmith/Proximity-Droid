<?xml version="1.0" encoding="utf-8"?>
<resources>

    <drawable name="overlay_actionbar_background">#aa000000</drawable>

    <style name="Overlay" parent="Theme.Sherlock">        
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:actionBarStyle">@style/overlay_actionbar</item>
    </style>

    <style name="overlay_actionbar" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/overlay_actionbar_background</item>
        <item name="android:backgroundSplit">@drawable/overlay_actionbar_background</item>
    </style>

</resources>